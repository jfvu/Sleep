<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="270px"
    android:layout_height="178px"
    android:background="@drawable/popbg">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="邀请亲友"
    android:textSize="20px"
    android:textColor="#000000"
    android:layout_marginTop="16px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容内容内容内容内容内容内容内容内容内容"
        android:layout_marginTop="8px"
        android:gravity="center"
        android:layout_marginLeft="14px"
        android:layout_marginRight="14px"
        android:textSize="14px"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/et_message_pop"
        android:layout_width="239px"
        android:layout_height="33.5px"
        android:hint="  请输入你想对亲友说的话..."
        android:textSize="14px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8px"
        android:background="#ffffff"
        android:textColorHint="#6b6b6b"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D4D4D4"
        android:layout_marginTop="8px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_cancel_pop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="16px"
            android:textColor="#323232"/>
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#B2AFB8"/>
        <TextView
            android:id="@+id/tv_sure_pop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textSize="16px"
            android:textColor="#323232"/>
    </LinearLayout>
</LinearLayout>