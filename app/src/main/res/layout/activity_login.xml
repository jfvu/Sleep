<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg375"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
<LinearLayout
    android:id="@+id/ll_phoneinput_login"
    android:layout_width="match_parent"
    android:layout_height="48px"
    android:layout_marginLeft="47px"
    android:layout_marginRight="47px"
    android:layout_marginTop="248px"
    android:layout_centerHorizontal="true"
    android:background="@mipmap/input3x"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="24px"
        android:layout_height="24px"
        android:src="@mipmap/phonenumber3x"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12px"/>
    <EditText
        android:id="@+id/et_phonenumber_login"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="12px"
        android:layout_gravity="center_vertical"
        android:hint="请输入手机号"
        android:textColorHint="#C8C8C8"
        android:textSize="16px"
        android:background="@null"/>
</LinearLayout>
<LinearLayout
    android:id="@+id/ll_paswordinput_login"
    android:layout_width="match_parent"
    android:layout_height="48px"
    android:layout_marginLeft="47px"
    android:layout_marginRight="47px"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="24px"
    android:background="@mipmap/input3x"
    android:layout_below="@id/ll_phoneinput_login"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="24px"
        android:layout_height="24px"
        android:src="@mipmap/password3x"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12px"
        />
    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:hint="请输入密码"
        android:layout_marginLeft="12px"
        android:background="@null"
        android:textColorHint="#c8c8c8"
        android:textSize="16px"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>
<Button
    android:id="@+id/but_login"
    android:layout_width="200px"
    android:layout_height="40px"
    android:background="@mipmap/login3x"
    android:text="登陆"
    android:textSize="20px"
    android:textColor="#ffffff"
    android:gravity="center"
    android:layout_below="@id/ll_paswordinput_login"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60px"
    />
    <TextView
        android:id="@+id/tv_register_login"
        android:layout_width="66px"
        android:layout_height="22px"
        android:layout_below="@id/but_login"
        android:text="立即注册"
        android:textColor="#a9a4d5"
        android:textSize="16px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="46px"/>
    <TextView
        android:id="@+id/tv_forgetword_login"
        android:layout_width="58px"
        android:layout_height="20px"
        android:layout_below="@id/tv_register_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62px"
        android:text="忘记密码"
        android:textSize="14px"
        android:textColor="#ffffff"
        android:gravity="center"/>
</RelativeLayout>
