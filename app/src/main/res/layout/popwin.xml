<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="270px"
    android:layout_height="156px"
    android:background="@drawable/popbg">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="添加设备"
    android:textSize="20px"
    android:textColor="#000000"
    android:layout_marginTop="16px"/>
    <EditText
        android:id="@+id/et_devicename_pop"
        android:layout_width="239px"
        android:layout_height="40px"
        android:hint="  请输入设备名称"
        android:textSize="16px"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17px"
        android:background="#ffffff"
        android:textColorHint="#6b6b6b"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:orientation="horizontal"
        android:layout_marginTop="17px">
        <TextView
            android:id="@+id/tv_cancel_pop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="16px"
            android:textColor="#323232"/>
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#B2AFB8"/>
        <TextView
            android:id="@+id/tv_sure_pop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textSize="16px"
            android:textColor="#323232"/>
    </LinearLayout>
</LinearLayout>