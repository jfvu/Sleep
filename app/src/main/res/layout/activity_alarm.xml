<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F7F7F7">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#44366e"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#44366e"
        >
        <ImageView
            android:id="@+id/img_back_alarm"
            android:layout_width="11.1px"
            android:layout_height="match_parent"
            android:src="@mipmap/back3x"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="就寝"
            android:textSize="22px"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_finish_alarm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="16px"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="12px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闹钟开关"
            android:gravity="center"
            android:textSize="18px"
            android:textColor="#323232"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"
            />
        <ToggleButton
            android:id="@+id/tb_alarm"
            android:layout_width="39px"
            android:layout_height="24px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:background="@android:color/transparent"
            android:button="@drawable/select_tb"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="24px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闹钟时间"
            android:textColor="#323232"
            android:textSize="18px"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px" />
        <TextView
            android:id="@+id/tv_alarmtime_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:00"
            android:textSize="16px"
            android:textColor="#bebebe"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="1px"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量"
            android:textColor="#323232"
            android:textSize="18px"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <SeekBar
            android:id="@+id/pb_volume_alarm"
            android:layout_width="160px"
            android:layout_height="17px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="20"
            android:progressDrawable="@drawable/layer_seek"
            android:maxHeight="15px"
            android:minHeight="15px"
            android:thumb="@drawable/select_seek"
            android:maxWidth="160px"
            android:minWidth="160px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="1px"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="震动"
            android:textSize="18px"
            android:textColor="#323232"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <ToggleButton
            android:id="@+id/tb_shake_alarm"
            android:layout_width="39px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"
            android:background="@android:color/transparent"
            android:button="@drawable/select_tb"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="1px"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铃声"
            android:textColor="#323232"
            android:textSize="18px"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <ImageView
            android:id="@+id/img_choosemusic_alarm"
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:src="@mipmap/next3x"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"/>
        <TextView
            android:id="@+id/tv_musicname_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新的一天"
            android:textSize="16px"
            android:textColor="#bebebe"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="1px"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周期"
            android:textColor="#323232"
            android:textSize="18px"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <ToggleButton
            android:id="@+id/tb_period_alarm"
            android:layout_width="39px"
            android:layout_height="24px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:background="@android:color/transparent"
            android:button="@drawable/select_tb"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="1px"
        android:background="#ffffff">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_date_alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="18px">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>