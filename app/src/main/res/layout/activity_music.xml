<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1136">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#44366e"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#44366e">
        <ImageView
            android:id="@+id/img_back_music"
            android:layout_width="11.1px"
            android:layout_height="match_parent"
            android:src="@mipmap/back3x"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="22px"/>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="220px"
            android:layout_height="220px"
            android:src="@mipmap/musicbg3x"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80px"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="107px"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_time1_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00:00"
                android:textSize="14px"
                android:textColor="#ffffff"
                android:layout_marginLeft="25px"
                android:layout_gravity="center_vertical"
                />
            <SeekBar
                android:id="@+id/pb_music"
                android:layout_width="234px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_gravity="center_vertical"
                android:progressDrawable="@drawable/layer_musicseek"
                android:maxHeight="3px"
                android:minHeight="3px"
                android:max="100"
                android:progress="20"
                android:thumb="@drawable/select_musicseek"
                />
            <TextView
                android:id="@+id/tv_time2_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:00"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5px"
                android:textColor="#ffffff"
                android:textSize="14px"
                android:layout_marginRight="25px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="56px">
            <ImageView
                android:id="@+id/img_last_music"
                android:layout_width="36px"
                android:layout_height="36px"
                android:src="@mipmap/lastmusic3x"
                android:layout_marginLeft="64px"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/img_play_music"
                android:layout_width="48px"
                android:layout_height="48px"
                android:src="@mipmap/play3x"
                android:layout_marginLeft="64px"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/img_next_music"
                android:layout_width="36px"
                android:layout_height="36px"
                android:src="@mipmap/nextmusic3x"
                android:layout_marginLeft="64px"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_down_music"
            android:layout_width="match_parent"
            android:layout_height="12px"
            android:src="@mipmap/down3x"
            android:layout_marginTop="32px"
            android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:id="@+id/rel_playlist_music"
            android:layout_width="match_parent"
            android:layout_height="38px"
            android:layout_marginTop="32px"
            android:background="#c789fe">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="播放列表"
                android:textColor="#f5b301"
                android:textSize="16px"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12px"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="1px"
            android:id="@+id/rv_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
</LinearLayout>