<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="20px"
    android:background="#44366e"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="205px"
        android:background="@mipmap/bg375">
        <ImageView
            android:id="@+id/img_head_myfragment"
            android:layout_width="98px"
            android:layout_height="98px"
            android:src="@mipmap/head3x"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35px"/>
        <TextView
            android:id="@+id/tv_name_myfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="飞翔的企鹅"
            android:textColor="#ffffff"
            android:textSize="16px"
            android:layout_marginTop="148px"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="8px"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#FEFEFE">
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/device3x"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定设备"
            android:textColor="#323232"
            android:textSize="18px"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48px"/>
        <ImageView
            android:id="@+id/img_devicenext_myfragment"
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:src="@mipmap/next3x"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"/>
        <TextView
            android:id="@+id/tv_devicenumber_myfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3"
            android:textSize="20px"
            android:textColor="#44366e"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="34px"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F7F7F7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#FEFEFE">
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/help3x"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="使用帮助"
            android:textColor="#323232"
            android:textSize="18px"
            android:layout_marginLeft="48px"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/img_helpnext_myfragment"
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:src="@mipmap/next3x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F7F7F7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#FEFEFE">
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/introduce3x"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="产品介绍"
            android:textColor="#323232"
            android:textSize="18px"
            android:layout_marginLeft="48px"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/img_introducenext_myfragment"
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:src="@mipmap/next3x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F7F7F7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#FEFEFE">
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/invite3x"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="邀请好友"
            android:textColor="#323232"
            android:textSize="18px"
            android:layout_marginLeft="48px"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/img_invitenext_myfragment"
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:src="@mipmap/next3x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F7F7F7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#FEFEFE">
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/set3x"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="系统设置"
            android:textColor="#323232"
            android:textSize="18px"
            android:layout_marginLeft="48px"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/img_setnext_myfragment"
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:src="@mipmap/next3x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


</LinearLayout>