<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="20px"
    android:background="#44366e"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#44366e">
        <ImageView
            android:id="@+id/img_back_getcode"
            android:layout_width="11.1px"
            android:layout_height="match_parent"
            android:src="@mipmap/back3x"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="22px"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="96px"
        android:layout_height="96px"
        android:src="@mipmap/logo3x"
        android:layout_marginTop="72px"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52px"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150px"
            android:layout_height="48px"
            android:layout_marginLeft="30px"
            android:background="@mipmap/inputword3x"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_inputword_getcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入验证码"
                android:textSize="16px"
                android:background="@null"
                android:layout_marginLeft="12px"
                android:textColorHint="#C4C4C4"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <Button
            android:id="@+id/but_getcode_getcode"
            android:layout_width="153px"
            android:layout_height="36px"
            android:layout_marginLeft="12px"
            android:layout_marginRight="30px"
            android:background="@mipmap/wordtime3x"
            android:textSize="16px"
            android:text="10秒后重新获取"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <Button
        android:id="@+id/but_next_getcode"
        android:layout_width="200px"
        android:layout_height="40px"
        android:background="@mipmap/login3x"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="20px"/>
</LinearLayout>