<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#44366e"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#44366e">
    <ImageView
        android:id="@+id/img_back_set"
        android:layout_width="11.1px"
        android:layout_height="match_parent"
        android:src="@mipmap/back3x"
        android:layout_marginLeft="12px"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="设置"
        android:textSize="22px"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_clear_set"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textColor="#323232"
            android:textSize="18px"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <TextView
            android:id="@+id/tv_showclear_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16px"
            android:textColor="#8D8D8D"
            android:text="345.5M"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="24px"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本信息"
            android:textSize="18px"
            android:textColor="#323232"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本：2.7.1"
            android:textSize="16px"
            android:textColor="#8d8d8d"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textColor="#323232"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"
            android:textSize="18px"/>
        <ImageView
            android:id="@+id/img_about_set"
            android:layout_width="9.2px"
            android:layout_height="match_parent"
            android:src="@mipmap/next3x"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_exit_set"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="55px"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="18px"
            android:textColor="#a9a4d5"
            android:gravity="center"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>