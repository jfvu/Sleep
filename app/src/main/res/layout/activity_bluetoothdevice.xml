<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_bluetoothdevice"
    android:background="@mipmap/bg375">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#44366e"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#44366e">
        <ImageView
            android:id="@+id/img_back_bluetoothdevice"
            android:layout_width="11.1px"
            android:layout_height="match_parent"
            android:src="@mipmap/back3x"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝牙设备"
            android:textColor="#ffffff"
            android:textSize="22px"
            android:layout_centerInParent="true"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="365px"
        android:layout_height="365px"
        android:layout_marginTop="50px"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/img_seach4"
            android:layout_width="365px"
            android:layout_height="365px"
            android:src="@mipmap/blue013x"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/img_seach3"
            android:layout_width="304.2px"
            android:layout_height="304.2px"
            android:src="@mipmap/blue023x"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/img_seach2"
            android:layout_width="243.3px"
            android:layout_height="243.3px"
            android:src="@mipmap/blue033x"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/img_seach1"
            android:layout_width="182.5px"
            android:layout_height="182.5px"
            android:src="@mipmap/blue043x"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/img_seach_bluetoothdevice"
            android:layout_width="101px"
            android:layout_height="101px"
            android:src="@mipmap/blue053x"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="38px"
            android:src="@mipmap/seach3x"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_stopseach_bluetoothdevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击停止识别设备"
            android:textColor="#ffffff"
            android:textSize="20px"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_hint_bluetoothdevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在识别您周围的智能家居并连接..."
        android:textColor="#ffffff"
        android:textSize="16px"
        android:layout_marginTop="12px"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>