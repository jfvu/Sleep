<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    android:focusable="true"
    android:focusableInTouchMode="true">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="20px"
    android:background="#44366e"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#44366e"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back_forgetword"
            android:layout_width="11.1px"
            android:layout_height="match_parent"

            android:src="@mipmap/back3x"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:gravity="center"
            android:text="忘记密码"
            android:textSize="22px"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_logo_forgetword"
        android:layout_width="96px"
        android:layout_height="96px"
        android:src="@mipmap/logo3x"
        android:layout_marginTop="72px"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="@mipmap/input3x"
        android:layout_marginLeft="47px"
        android:layout_marginRight="47px"
        android:layout_marginTop="52px"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/phonenumber3x"
            android:layout_marginLeft="12px"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_phonenumber_forgetword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入手机号吗"
            android:textColorHint="#C4C4C4"
            android:background="@null"
            android:layout_marginLeft="12px"
            android:textSize="16px"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <Button
        android:id="@+id/but_getcode"
        android:layout_width="200px"
        android:layout_height="40px"
        android:background="@mipmap/login3x"
        android:text="获取验证码"
        android:textSize="20px"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        />
</LinearLayout>